{
  "name": "@jsbolo/shared",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run proto && tsc && npm run copy-generated",
    "dev": "tsc --watch",
    "proto": "bash scripts/compile-proto.sh",
    "copy-generated": "cp -r src/generated dist/",
    "clean": "rm -rf dist src/generated",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --ignore-pattern \"src/generated/**\" --ignore-pattern \"src/**/*.d.ts\" --ignore-pattern \"src/**/*.js\""
  },
  "dependencies": {
    "protobufjs": "^7.2.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "protobufjs-cli": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
